%h1.heading-xlarge Edit Editor

= form_for [:admin, @editor] do |f|
  %table.horizontal
    %tr
      %th{:scope => 'row'} Name
      %td= @editor.name
    %tr
      %th{:scope => 'row'} Email
      %td= @editor.email
    %tr
      %th{:scope => 'row'}= f.label :role
      %td= f.collection_select :role, Editor.roles.keys, :to_s, :titlecase
    - if @editor.uploader?
      %tr
        %th{:scope => 'row'}= f.label :service_provider, 'Service provider', value: :id
        %td= f.collection_select :service_provider_id, @service_providers, :id, :name, { prompt: '', selected: @editor.service_provider&.id }

  .form-group
    = f.submit 'Update editor', class: 'button'
