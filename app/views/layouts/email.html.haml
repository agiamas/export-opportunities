!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Exporting is GREAT
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag 'email'
  %body
    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
      %tr
        %td.header-line{:bgcolor => "#1e1348", :height => "5"}
      %tr
        %td.content-wrap{:align => "left", :bgcolor => "#ffffff"}
          %table.content{:border => "0", :cellpadding => "0", :cellspacing => "0"}
            = yield
            %tr
              %td.footer
                %table{:border => "0", :cellpadding => "0", :cellspacing => "0"}
                  %tr
                    %td.eig-signature
                      The
                      %strong Export opportunities
                      Team
                      %br/
                      %a{:href => "https://opportunities.export.great.gov.uk/"} https://opportunities.export.great.gov.uk
                  %tr
                    %td.eig-logo
                      = image_tag 'eig-logo-flag-footer-2x.png', {:alt => "Exporting is GREAT logo", :height => "51", :width => "100"}
                    %td
                      = image_tag 'hmg-logo-bow-2x.png', {:alt => "HM Government logo", :height => "51", :width => "140"}
