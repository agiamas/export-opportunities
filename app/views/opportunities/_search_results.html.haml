- @opportunities.each do |opportunity|
  %article.results__item
    %h3.results__title
      = link_to opportunity.title.strip, opportunity_path(opportunity)
    %p
      = opportunity.teaser

    - if opportunity.response_due_on
      .results__icon.results__icon--date
        Opportunity expires:
        %time{datetime: opportunity.response_due_on.iso8601}= opportunity.response_due_on.to_s(:long)
      .results__icon.results__icon--enquiries
        Applications received:
        = opportunity.enquiries.size
= paginate @opportunities, params: { controller: 'opportunities', action: 'index', format: ''}
